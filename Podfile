# platform :ios, '9.0'

target 'SkiddleEvents' do
  use_frameworks!

  # core RxSwift
  pod 'RxSwift', '~> 4.0'
  pod 'RxCocoa', '~> 4.0'
  pod 'RxDataSources', '~> 3.0'

  # Community projects
  pod 'Action', '~> 3.4'
  pod 'NSObject+Rx', '~> 4.1'

  # Realm database
  pod 'RealmSwift', '~> 3.0'
  pod 'RxRealm', '~> 0.7'

  # Data Handling 
  pod 'RxAlamofire'
  pod 'SwiftyJSON'

  # Location Handling 
  pod 'RxCoreLocation'

  # Image handling
  pod 'Kingfisher'

  # Gesture Handling 
  pod 'RxGesture'
end
